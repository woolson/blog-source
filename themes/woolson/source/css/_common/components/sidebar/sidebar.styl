.sidebar {
  position: fixed;
  // position absolute;
  top: 0;
  bottom: 0;
  padding 0 0;

  width: 0;
  z-index: $zindex-4;
  // box-shadow: inset 0 2px 6px black;
  background: $background;
  -webkit-transform: translateZ(0); // http://stackoverflow.com/questions/17079857/position-fixed-broken-in-chrome-with-flash-behind
  border-left 1px solid #F5F5F5

  a {
    // color: $grey-dark;
    border-bottom-color: $black-light;
    &:hover { color: $gainsboro; }
  }

  +tablet() {
    hide() if not hexo-config('sidebar.onmobile');
  }
  +mobile() {
    hide() if not hexo-config('sidebar.onmobile');
  }
  +desktop-large() {
    right: calc(50% - 475px);
  }
  +desktop() {
    right: calc(50% - 475px);
  }
}

.sit-recommend
  overflow: hidden
  ul
    padding 0
    margin 0
    list-style none
  li
    // width 160px
    // white-space: nowrap
    // overflow: hidden
    // text-overflow: ellipsis
    text-align: left
    padding 5px
    font-size: 14px
    line-height: 1.2
    box-sizing: border-box
    a
      border-bottom-color: $background
    &:hover
      background $background
      border-radius 3px
      color white
      cursor: pointer
      > a
        color white
        text-decoration: none
        border-bottom: none

.sidebar-inner {
  position: relative;
  padding: 20px;
  // color: $grey-dark;
  text-align: center;
}

.site-overview-wrap {
  overflow: hidden;
}

.site-overview {
  overflow-y: auto;
  overflow-x: hidden;
}

@import "sidebar-toggle";
@import "sidebar-author";
@import "site-state";
@import "sidebar-feed-link";
@import "sidebar-author-links";
@import "sidebar-blogroll";
@import "sidebar-nav";
@import "sidebar-toc";
@import "sidebar-dimmer" if hexo-config('sidebar.onmobile');
